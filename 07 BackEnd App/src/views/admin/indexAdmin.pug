extends ../layout

block contentBlock
  h1= title

  p Welcome to #{title} (PUG)
  p PUG welcomes... 
    span Span text from Admin

  nav
    ul
      li
        a(href='/admin/news/add') Dodaj
  table
    tr
      th id
      th tytuł
      th data dodania
      th akcja
    each item, index in data
      tr 
        td=index
        td=item.title
        td=item.created
        td
          a(href=`/admin/news/delete/${item._id}`) Usuń
