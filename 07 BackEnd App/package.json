    "sass": "^1.50.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.10.2",
    "nodemon": "^2.0.15",
